---

// create object for info for each vehicle
const { vehicle } = Astro.props;
import { capitalizeFirst } from '../utilities/capitalizeFirst.js';

---
<div class="vehicle-card">
    <img src={vehicle.image} alt={vehicle.name} class="vehicle-image" />
    <h1 class="vehicle-card-title"> {capitalizeFirst(vehicle.condition)} {vehicle.year} {vehicle.make} {vehicle.model}</h1>
    <p class="vehicle-card-price">${vehicle.price.toLocaleString()}</p>
    <p class="vehicle-card-vin">VIN: {vehicle.vin}</p>
    <p class="vehicle-card-mileage">{vehicle.mileage.toLocaleString()} mi</p>
</div>

<style>
.vehicle-card {
    border: 1px solid #ccc;
    border-radius: 8px;
    padding: 1rem;
    text-align: center;
    background-color: #f9f9f9;
}
.vehicle-image {
    width: 100%;
    aspect-ratio: 4 / 3;
    object-fit: cover;
    object-position: center;
    border-radius: 4px;
}
.vehicle-card-title {
    font-size: 1.25rem;
    margin: 0.5rem 0;
}
.vehicle-card-price {
    font-size: 1.5rem;
    color: #2c3e50;
}
.vehicle-card-vin,
.vehicle-card-mileage {
    font-size: 0.875rem;
    color: #7f8c8d;
}
</style>